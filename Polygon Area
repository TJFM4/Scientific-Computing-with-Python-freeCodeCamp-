class Rectangle:
    def __init__(self, width, height):
        self.width = width
        self.height = height
    
    def set_width(self, new_width):
        self.width = new_width
    
    def set_height(self, new_height):
        self.height = new_height

    def get_area(self):
        return self.height * self.width

    def get_perimeter(self):
        return 2 * self.width + 2 * self.height
    
    def get_diagonal(self):
        return (self.width ** 2 + self.height ** 2) ** 0.5

    def get_picture(self):
        if self.width > 50 or self.height > 50:
            return 'Too big for picture.'
        shape = ''
        for num in range(self.height):
            for num in range(self.width):
                shape += '*'
            shape += '\n'
        return shape

    def get_amount_inside(self, other):
        if self.width < other.width or self.height < other.height or self.get_area() < other.get_area():
            return 0
        fit_width = self.width // other.width
        fit_height = self.height // other.height
        return fit_width * fit_height
    
    def __str__(self):
        return f'Rectangle(width={self.width}, height={self.height})'

class Square(Rectangle):
    def __init__(self, dimension):
        self.width = dimension 
        self.height = dimension

    def set_width(self, dimension):
        self.width = dimension
        self.height = dimension

    def set_height(self, dimension):
        self.width = dimension
        self.height = dimension

    def set_side(self, dimension):
        self.width = dimension
        self.height = dimension
    
    def __str__(self):
        return f'Square(side={self.width})'
